extends ../../layout.jade
block contenido
    div(class="container")
        for job in jobs
            .white.border.tr.large-padding
                .row
                    .col-md-10
                        h3= job.category
                        h4= job.type
                        h4= job.company
                        img(src="/public/jobs_images/#{job._id}.#{job.extension}")
                        h4= job.position
                        h4= job.location
                        h4= job.description
                    .col-md-2
                        a(href="/app/jobs/#{job._id}/edit", class="Edit") Edit
                        form(action="/app/jobs/#{job._id}?_method=DELETE", class="link", method="POST")
                            input(type="submit", value="Delete")