extends ../../layout.jade
block contenido
    div(class="col-md-6 remove-float content-center big-top-space big-bottom-space")
        h1(class="PostJob") Post a Job
        hr
        form(action="/app/jobs", method="POST" enctype="multipart/form-data")
            div(class="form-group")
                label(for="category" class="col-xs-1") Category
                select(name="category" id="category", class="form-control")
                  each cat in category 
                        option(value = cat) #{cat}

            div(class="form-group")
                label(for="type" class="col-xs-1") Type
                br
                
                input(type="radio", name="type", value="FullTime")
                label(for="FullTime", class="radio-inline margin-right" ) Full Time
                
                input(type="radio", name="type", value="PartTime")
                label(for="PartTime", class="radio-inline margin-right") Part Time

                input(type="radio", name="type", value="Freelance")
                label(for="Freelance", class="radio-inline margin-right") Freelance
            
            div
                label(for="company" class="col-xs-1") Company
                input(type="text" name="company", placeholder="Company", id="company", class="form-control")
            
            div
                label(for="logo" class="col-xs-1") Logo
                input(type="file" name="logo", placeholder="Choose logo", id="logo", class="form-control")

            div
                label(for="url" class="col-xs-1") URL
                input(type="text" name="url", placeholder="URL", id="url", class="form-control")

            div
                label(for="position" class="col-xs-1") Position
                input(type="text" name="position", placeholder="Position", id="position", class="form-control")

            div
                label(for="location" class="col-xs-1") Location
                input(type="text" name="location", placeholder="Location", id="location", class="form-control")

            div
                label(for="description" class="col-xs-1") Description
                textarea(name="description", rows="10", placeholder="Description", id="description", class="form-control")
                //input(type="textarea" name="description", placeholder="Description", id="description", class="form-control")

            div(class="row top-space")
                div(class="col-xs-12 col-sm-6")
                    input(type="submit", value="Add", class="btn btn-info")