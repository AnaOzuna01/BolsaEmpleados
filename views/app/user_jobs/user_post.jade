extends ../../layout_user.jade
block contenido
    div(class="col-md-6 remove-float content-center big-top-space big-bottom-space")
    h1 Welcome to User Post
    form(action="/app/user_jobs/#{job._id}/user_post" method="POST") 
    
        .row
            div(class="col-xs-10")
                label(for="email") Email
                input(type="text" name="email", placeholder="Email", id="email", class="form-control")

        label(for= "category")  Category
        input(type="text", name="category", placeholder="Category", id="category", class="form-control", value="#{job.category}")
            
        label(for= "location")  Location
        input(type="text", name="location", placeholder="location", id="location", class="form-control", value="#{job.location}")
            
        label(for= "position")  Position
        input(type="text", name="position", placeholder="Position", id="position", class="form-control", value="#{job.position}")
            
        label(for= "company")  Company
        input(type="text", name="company", placeholder="Company", id="company", class="form-control", value="#{job.company}")
             
        
        div(class="row top-space")
            div(class="col-xs-12 col-sm-6")
                form(action="app/user_jobs/user_post")
                    input(type="submit", value="Post", class="btn btn-info")
               
        div(class="row top-space")
            div(class="col-xs-12 col-sm-6")
                form(action="/app/user_jobs/user_home")
                    input(type="submit", value="Back", class="btn btn-warning")