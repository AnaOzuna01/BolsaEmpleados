extends ../../layout_user.jade

block contenido
    
    
    h1.design  Design
    hr
    br

    table.tabla
        tr 
            th Location
            th Position
            th Company
            th Views
            
        for jobs in users_jobs
            if ( jobs.category == "Design")
            
                tr 
                    td #{jobs.location}
                    td #{jobs.position}
                    td #{jobs.company}
                    td
                        a(href="/app/user_jobs/#{jobs._id}/user_post", class="right-space color") Post
                        a(href="/app/user_jobs/#{jobs._id}/user_info", class="right-space color") Info
                br
                
    nav(class="mx-auto")
    if pages
        ul(class="pagination")
            //<!-- 1ra Pagina -->
            if(current == 1)
                li(class="page-item disabled")
                    a(href="" class="page-link") First Page
        
            else
                li(class="page-item")
                    a(href="/app/user_jobs/user_home/1" class="page-link") First Page
