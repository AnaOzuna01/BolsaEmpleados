extends ../../layout_user.jade

block contenido
    
    
    h1.design  Design
    hr
    br

    table.tabla
        tr 
            th Location
            th Position
            th Company
            th Views
            
        for jobs in users_jobs
            if ( jobs.category == "Design")
            
                tr 
                    td #{jobs.location}
                    td #{jobs.position}
                    td #{jobs.company}
                    td
                        a(href="/app/user_jobs/#{jobs._id}/user_post", class="right-space color") Post
                        a(href="/app/user_jobs/#{jobs._id}/user_info", class="right-space color") Info
                br
                
    nav(class="Page navigation example")
        ul(class="pagination")
            li(class="page-item")
                button(type="submit" class="page-link")
                    i.fa.fa-arrow-circle-left
            li(class="page-item")
                button(type="submit" class="page-link")
                    i.fa.fa-arrow-circle-right  
    br
