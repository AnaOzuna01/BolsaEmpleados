extends ../../layout_user.jade

block contenido
    
    nav(class="Page navigation example")
        ul(class="pagination")
            //1ra Pagina
            if(current == 1)
                li(class="page-item disabled")
                    a(href="" class="page-link") First Page
        
            else
                li(class="page-item")
                    a(href="/app/user_jobs/user_home/1" class="page-link") First Page
            //Paginas 
            
            -var c = parseInt(current)
            -var i = c > 5 ? c - 4 : 1 
            if (i !== 1)
                a(href="#" class="page-link") ...
                
            -for(;i <= (c + 4) && i <= pages; i++)
                if(i == c)
                    li(class="page.item")
                        a(href="#{i}" class="page-link") #{i}
                    
                else
                    li(class="page-item")
                        a(href="/app/user_jobs/user_home/#{i}" class="page-link") #{i}
                    
                if( i == c + 4 && i < page) 
                    li(class = "page-item")
                        a(href="#" class="page-link") ...
                    
                
            //Ultima Pagina
            if(current == pages)
                li(class="page-item disabled")
                    a(href="" class="page-link")  Last Page
        
            else
                li(class="page-item")
                    a(href="/app/user_jobs/user_home/#{pages}" class="page-link") Last Page
    br
    br      
    br
    hr
    br
    for cat in category
        table.tabla
            h1.prog #{cat}
            tr 
                th Location
                th Position
                th Company
                th Date
                th Views            
            for jobs in users_jobs
                if ( jobs.category == cat)
                    tr 
                        td #{jobs.location}
                        td #{jobs.position}
                        td #{jobs.company}
                        td #{jobs.creatDate}
                        td
                            a(href="/app/user_jobs/#{jobs._id}/user_post", class="right-space color") Post
                            a(href="/app/user_jobs/#{jobs._id}/user_info", class="right-space color") Info
        br
        br        
            