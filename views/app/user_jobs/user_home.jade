                a(href="#" class="page-link")...
                
            //for(; i <= (c + 4) && i <= pages; i++)
                if(i == c)
                    li(class="page.item")
                        a(href="#{i}" class="page-link")
                    
                    else
                        li(class="page-item")
                            a(href="/app/user_jobs/user_home/#{i}" class="page-link") #{i}
                    
                    if( i == c + 4 && i < page) 
                        li(class = "page-item")
                            a(href="#" class="page-link")...
                    
                
